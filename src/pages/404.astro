---
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found">
  <section
    class="section bg-light pt-30 lg:pt-43 bg-4col-grid overflow-x-hidden border-b border-border"
  >
    <div
      data-aos="fade-up-sm"
      data-aos-delay="150"
      class="container sm:w-[90%] md:w-[70%] lg:w-[50%] mx-auto"
    >
      <div class="text-center">
        <span
          data-aos="zoom-in-sm"
          data-aos-delay="150"
          class="text-[9rem] block font-bold text-text-dark"
        >
          404
        </span>
        <h1 data-aos="fade-up-sm" data-aos-delay="150" class="h2 mb-4">
          Ops! Page not found
        </h1>
        <div data-aos="fade-up-sm" data-aos-delay="200" class="content">
          <p class="text-balance">
            It looks like the page you’re looking for doesn’t exist or might
            have been moved. Don’t worry, let’s get you back on track!
          </p>
        </div>
        <a
          data-aos="fade-up-sm"
          data-aos-delay="250"
          href="/"
          class="btn btn-dark rounded-full mt-8">Go to Homepage</a
        >
      </div>
    </div>
  </section>
</Base>
